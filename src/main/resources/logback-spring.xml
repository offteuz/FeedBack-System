<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Inclui configuração padrão do Spring Boot -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

    <!-- Definição de propriedades -->
    <property name="LOG_FILE" value="${LOG_FILE:-${LOG_PATH:-${LOG_TEMP:-${java.io.tmpdir:-/tmp}}/}spring.log}"/>
    <property name="APPLICATIONINSIGHTS_CONNECTION_STRING" value="${APPLICATIONINSIGHTS_CONNECTION_STRING:-}"/>
    <property name="APPLICATIONINSIGHTS_INSTRUMENTATION_KEY" value="${APPLICATIONINSIGHTS_INSTRUMENTATION_KEY:-}"/>

    <!-- Saída no console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %logger{36} - %level - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Saída em arquivo com rotação por tamanho e data -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Appender do Application Insights (ativado só se houver connection string ou instrumentation key) -->
    <if condition='!property("APPLICATIONINSIGHTS_CONNECTION_STRING").isEmpty() || !property("APPLICATIONINSIGHTS_INSTRUMENTATION_KEY").isEmpty()'>
        <then>
            <appender name="APPLICATION_INSIGHTS" class="com.microsoft.applicationinsights.logback.ApplicationInsightsAppender">
                <!-- Connection String takes precedence -->
                <connectionString>${APPLICATIONINSIGHTS_CONNECTION_STRING}</connectionString>
                <!-- Fallback to Instrumentation Key if connection string is not set -->
                <instrumentationKey>${APPLICATIONINSIGHTS_INSTRUMENTATION_KEY}</instrumentationKey>
            </appender>
        </then>
    </if>

    <!-- Logger raiz -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <if condition='!property("APPLICATIONINSIGHTS_CONNECTION_STRING").isEmpty() || !property("APPLICATIONINSIGHTS_INSTRUMENTATION_KEY").isEmpty()'>
            <then>
                <appender-ref ref="APPLICATION_INSIGHTS"/>
            </then>
        </if>
    </root>

    <!-- Loggers específicos da aplicação -->
    <logger name="com.fiap.feedbacksystem.controller" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <if condition='!property("APPLICATIONINSIGHTS_CONNECTION_STRING").isEmpty() || !property("APPLICATIONINSIGHTS_INSTRUMENTATION_KEY").isEmpty()'>
            <then>
                <appender-ref ref="APPLICATION_INSIGHTS"/>
            </then>
        </if>
    </logger>

    <logger name="com.fiap.feedbacksystem.service" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <if condition='!property("APPLICATIONINSIGHTS_CONNECTION_STRING").isEmpty() || !property("APPLICATIONINSIGHTS_INSTRUMENTATION_KEY").isEmpty()'>
            <then>
                <appender-ref ref="APPLICATION_INSIGHTS"/>
            </then>
        </if>
    </logger>

    <!-- Reduz verbosidade do Spring -->
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.springframework.boot" level="INFO"/>
    <logger name="org.hibernate" level="INFO"/>

    <!-- Ajuste de nível para Azure SDK e telemetria -->
    <logger name="com.azure" level="WARN"/>
    <logger name="com.microsoft.applicationinsights" level="INFO"/>

</configuration>
